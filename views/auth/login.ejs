<div class="container-fluid">
  <h1>Login</h1>
  <% if(messages.error){ %>
  <p><%= messages.error %></p>
  <% } %> <% if(errors.length > 0){ %> <% errors.forEach(error => { %>
  <p><%= error.msg %></p>
  <% }) %> <% } %> <% if(messages.success_msg){ %>
  <p><%= messages.success_msg %></p>
  <% } %>
  <form action="/auth/login" method="post">
    <div class="form-group">
      <label for="email">Email:</label>
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        required
      />
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input
        class="form-control"
        type="password"
        name="password"
        id="password"
        required
      />
    </div>
    <button class="btn btn-lg btn-dark" type="submit">Login</button>
  </form>
</div>
