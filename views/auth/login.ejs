<div class="container-fluid">
  <h1>Login</h1>
  <form action="/auth/login" method="post">
    <div class="form-group">
      <label for="email">Email:</label>
      <input
        class="form-control"
        type="email"
        name="email"
        id="email"
        required
      />
    </div>
    <div class="form-group">
      <label for="password">Password:</label>
      <input
        class="form-control"
        type="password"
        name="password"
        id="password"
        required
      />
    </div>
    <button class="btn btn-lg btn-dark" type="submit">Login</button>
  </form>
</div>
