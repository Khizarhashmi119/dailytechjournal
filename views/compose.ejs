<%- include("partials/header") -%>
<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="#title">Title:</label>
    <input
      class="form-control"
      type="text"
      name="title"
      id="title"
      placeholder="Title"
      autofocus
    />
  </div>
  <div class="form-group">
    <label for="#post">Post:</label>
    <textarea
      class="form-control"
      name="post"
      rows="5"
      cols="30"
      id="post"
      placeholder="Write your post here"
    ></textarea>
    <small class="form-text text-muted"
      >Post must be less than or equal to 1000 characters.</small
    >
  </div>
  <button class="btn btn-lg btn-dark" type="submit">Publish</button>
</form>
<%- include("partials/footer") -%>
